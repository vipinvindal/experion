log4j.rootCategory=DEBUG, dest1, dest2
log4j.appender.dest1=org.apache.log4j.ConsoleAppender
log4j.appender.dest1.layout=org.apache.log4j.PatternLayout
log4j.appender.dest1.layout.ConversionPattern=%d %-4r [%t] %-5p %c %x - %m%n

log4j.appender.dest2=org.apache.log4j.FileAppender
log4j.appender.dest2.File=${catalina.home}/logs/esperion.log
log4j.appender.dest2.layout=org.apache.log4j.PatternLayout
log4j.appender.dest2.layout.ConversionPattern=%d %-4r [%t] %-5p %c %x - %m%n
